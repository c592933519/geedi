<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.slapp.mapper.UserDOMapper">
	<resultMap id="user" type="com.slapp.pojo.User">
		<result column="username" property="username" jdbcType="VARCHAR" />
		<result column="password" property="password" jdbcType="VARCHAR" />
		<result column="email" property="email" jdbcType="VARCHAR" />
	</resultMap>
	<select id="getUser" parameterType="com.slapp.pojo.User" resultMap="user">
		select
		username,password,email
		from tbl_user where username=#{username}
		and password
		=#{password}
	</select>
	<select id="countUser" resultType="java.lang.Integer">
		select
		count(1)
		from tbl_user where
		<if test="username!=null">
			username=#{username}
		</if>
		<if test="email!=null">
			email=#{email}
		</if>
	</select>
	<insert id="saveUser">
		insert into tbl_user
		(username,password,email)values(#{username},#{password},#{email})
	</insert>
</mapper>