<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.slapp.mapper.UserDOMapper">
	<resultMap id="user" type="com.slapp.pojo.User">
		<result column="username" property="username" jdbcType="VARCHAR" />
		<result column="password" property="password" jdbcType="VARCHAR" />
		<result column="email" property="email" jdbcType="VARCHAR" />
	</resultMap>
	<select id="getUser" resultMap="user">
		select
		username,password,email
		from tbl_user where username=#{user.username}
		and password
		=#{user.password}
	</select>
	<select id="countUserByUsername" parameterType="java.lang.Integer">
		select
		count(1)
		from tbl_user where username=#{username}
	</select>
</mapper>